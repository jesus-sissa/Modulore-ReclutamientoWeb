@model ProspectusData

<div class="card">
    <div class="card-body">
        <div class="basic-form">
            <h4 class="card-title">Puesto Solicitado</h4>
            <div class="form-group">
                <label asp-for="@Model.PositionData.Department" class="text-muted m-b-15 f-s-12"></label>
                <select id="department" class="form-control input-rounded" asp-for="@Model.PositionData.Department" asp-items="@(new SelectList(Model.PositionData.Departments, "Value","Text",Model.PositionData.Department))"></select>
            </div>

            <div id="positions" class="form-group">
                <label asp-for="@Model.PositionData.Position" class="text-muted m-b-15 f-s-12"></label>
                <select class="form-control input-rounded" asp-for="@Model.PositionData.Position" asp-items="@(new SelectList(Model.PositionData.Positions, "Value","Text",Model.PositionData.Position))"></select>
            </div>
            <h4 class="card-title">¿Cómo te enteraste del puesto?</h4>
            <div class="form-group">
                <label asp-for="@Model.PositionData.ContactMode" class="text-muted m-b-15 f-s-12"></label>
                <select id="contMoD" class="form-control input-rounded" asp-for="@Model.PositionData.ContactMode" asp-items="@(new SelectList(Model.PositionData.ContactModeOp, "Value","Text",Model.PositionData.ContactMode))"></select>
            </div>

            <div id="contactmodeD" class="form-group">
                <label asp-for="@Model.PositionData.Specify" class="text-muted m-b-15 f-s-12"></label>
                <select class="form-control input-rounded" asp-for="@Model.PositionData.Specify" asp-items="@(new SelectList(Model.PositionData.SpecifyOp, "Value","Text",Model.PositionData.Specify))"></select>
            </div>

        </div>
    </div>
</div>

