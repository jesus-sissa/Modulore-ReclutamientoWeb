@using Modulo_Reclutamiento_Web.Models.HomeVisitData;
@model HomeVisit;
<div class="page-header">
    <div class="page-title">
        <ol class="breadcrumb" style="float:left">
            <li class="breadcrumb-item"><a href="@Url.Action("ListOfVisits","HomeVisit",new{ pto =ViewBag.pto,filter=ViewBag.Filter,stat="U"})"><i class="ti-arrow-left"></i> Regresar</a></li>
        </ol>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Reclutador</a></li>
            <li class="breadcrumb-item active">Visita Domiciliaria</li>
            <li class="breadcrumb-item active" id="title">Nueva</li>
        </ol>
    </div>
</div>
<div class="card">
    <div class="card-tittle"></div>
    <div class="card-body">
        <form method="post" asp-action="NewVisit" asp-controller="HomeVisit">
            <input type="hidden" asp-for="@Model.IdProspOrEmpl" value="@ViewBag.pto" />
            <input type="hidden" asp-for="@Model.ProspOrEmpl" value="@((ViewBag.Filter==1)?"P":"E")" />
            <div class="form-group col-6">
                <label asp-for="@Model.DayOfVisit"></label>
                <input type="date" asp-for="@Model.DayOfVisit" value="@DateTime.Today.ToString("yyyy-MM-dd")" class="form-control input-rounded" />
            </div>
            <div class="form-group col-6">
                <label asp-for="@Model.VisitingTime"></label>
                <input type="time" asp-for="@Model.VisitingTime" autocomplete="off" class="form-control" />
            </div>
            <div class="form-group col-6">
                <label asp-for="@Model.ReasonToVisit"></label>
                <input type="text" asp-for="@Model.ReasonToVisit" autocomplete="off" class="form-control" />
            </div>
            <div class="form-group col-6">
                <input type="submit" autocomplete="off" class="btn btn-sissa-green-light" style="color:#fff" value="Guardar" />
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    <script type="text/javascript">
        $(document).ready(function() {
            if("@ViewBag.ERR"==="ERRINS")
        });
    </script>
}