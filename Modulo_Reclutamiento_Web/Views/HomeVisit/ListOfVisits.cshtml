
@using Modulo_Reclutamiento_Web.Models.HomeVisitData;
@model List<HomeVisit>;
<div class="page-header">
    <div class="page-title">
        <ol class="breadcrumb" style="float:left">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","HomeVisit")"><i class="ti-arrow-left"></i> Regresar</a></li>
        </ol>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Reclutador</a></li>
            <li class="breadcrumb-item active">Visita Domiciliaria</li>
            <li class="breadcrumb-item active">Lista de Visitas</li>
        </ol>
    </div>
</div>
@if (@Model != null)
{

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-title">
                    <h4>Lista de Visitas</h4>
                     <a href="@Url.Action("NewVisit","HomeVisit",new{ pto =ViewBag.pto,filter=ViewBag.Filter}) " class="btn btn-sissa-green-light btn-rounded" style="color:white;float:right"><i class="ti-clipboard"></i> Nueva </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Fecha Visita</th>
                                    <th>Hora Visita</th>
                                    <th>Usuario Visita</th>
                                    <th>Accion</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>


                                        <th>@item.DayOfVisit</th>
                                        <th>@item.VisitingTime</th>
                                        <th>@item.RecruiterName</th>
                                        <th class="text-right" >
                                             <a href="@Url.Action("Research","HomeVisit",new{ pto =ViewBag.pto,idvisit=item.IdHomeVisit,filter=ViewBag.Filter,stat=@ViewBag.stat})" class="btn btn-sissa-blue-light btn-rounded" style="color:white"><i class="ti-clipboard"></i> Ir </a>
                                        </th>
                                      

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
